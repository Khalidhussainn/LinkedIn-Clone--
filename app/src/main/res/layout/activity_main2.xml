<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            android:padding="5dp"/>

        <SearchView
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Search"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            style="@style/CustomSearchViewStyle" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/messge_icon" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/framelayout"
        android:layout_marginTop="40dp">
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/linearLayout"
        android:layout_above="@id/tablayout"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Post 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Profile Image and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khalid Hussain"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student at Akhuwat University" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/post_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="One Year Celebration Party"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post" />

                <!-- Action Icons and Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Like Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/like"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like"/>
                    </LinearLayout>

                    <!-- Comment Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_comment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/comment"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"/>
                    </LinearLayout>

                    <!-- Share Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_share"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/share"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"/>
                    </LinearLayout>

                    <!-- Send Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_send"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/send"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Post 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Profile Image and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/profile2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hamza Mehmood"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Software Engineer at Google" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/post_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Excited to share my latest project!"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post2" />

                <!-- Action Icons and Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Like Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/like"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like"/>
                    </LinearLayout>

                    <!-- Comment Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_comment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/comment"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"/>
                    </LinearLayout>

                    <!-- Share Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_share"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/share"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"/>
                    </LinearLayout>

                    <!-- Send Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_send"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/send"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Post 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Profile Image and Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/profile3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faheem Hayat"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soc Analyst" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/post_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Excited to share my latest picture"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post3" />

                <!-- Action Icons and Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Like Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_like"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/like"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like"/>
                    </LinearLayout>

                    <!-- Comment Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_comment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/comment"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"/>
                    </LinearLayout>

                    <!-- Share Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_share"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/share"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"/>
                    </LinearLayout>

                    <!-- Send Icon and Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:id="@+id/icon_send"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/send"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/text_send"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home_icon"
            android:title="Home"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/network_icon"
            android:title="MyNetwork"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/post_icon"
            android:title="Post"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/notifications_icon"
            android:title="Notifications"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/suitcase"
            android:title="Jobs"/>
    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>

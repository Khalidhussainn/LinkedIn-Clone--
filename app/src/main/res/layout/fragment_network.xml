<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Invitations Section -->
    <TextView
        android:id="@+id/invitations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invitations"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000"/>

    <!-- Daily Games Section -->
    <TextView
        android:id="@+id/daily_games_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay in touch through daily games"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prep your mind for the workday and compare results."
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Game 1 (Queens) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crown each region"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queens #129"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Game 2 (Pins) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess the pins"
                android:textSize="14sp"
                android:textColor="#000"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/post"
                app:shapeAppearanceOverlay="@style/CircularImage"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Manage my Network Section -->
    <TextView
        android:id="@+id/manage_network_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage my network"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000"/>

    <!-- GridLayout for user profiles -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- User 1 (Amar Mohamed) -->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header for Notifications -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/roboto_bold" />

    <!-- Scrollable content for notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Notification Item 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/post"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_picture_1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/notification_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Muhammad Saqlain and 1 other person viewed your profile. See all views."
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 hours ago"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Item 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/profile"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_picture_2"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/notification_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You were mentioned in a post by Masoom Malang in Mazah Yafta."
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13 hours ago"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Item 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/post2"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_picture_3"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/notification_text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your post was liked by 10 people."
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/time_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 day ago"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Item 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/post3"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_picture_4"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/notification_text_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You have 3 new connections this week."
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/time_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 days ago"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Item 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture_5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/profile2"
                        app:shapeAppearanceOverlay="@style/CircularImage" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_picture_5"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/notification_text_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You have a new message from Sara."
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/time_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 days ago"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
